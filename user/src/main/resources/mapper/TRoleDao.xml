<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "./mybatis-3-mapper.dtd">
<mapper namespace="cn.kcs.user.dao.TRoleDao">

    <resultMap type="cn.kcs.user.entity.TRole" id="TRoleMap">
        <result property="roleId" column="role_id" jdbcType="VARCHAR"/>
        <result property="roleName" column="role_name" jdbcType="VARCHAR"/>
        <result property="roleDescription" column="role_description" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TRoleMap">
        select
          role_id, role_name, role_description
        from myproject.t_role
        where role_id = #{roleId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TRoleMap">
        select
          role_id, role_name, role_description
        from myproject.t_role
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TRoleMap">
        select
        role_id, role_name, role_description
        from myproject.t_role
        <where>
            <if test="roleId != null and roleId != ''">
                and role_id = #{roleId}
            </if>
            <if test="roleName != null and roleName != ''">
                and role_name = #{roleName}
            </if>
            <if test="roleDescription != null and roleDescription != ''">
                and role_description = #{roleDescription}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="roleId" useGeneratedKeys="true">
        insert into myproject.t_role(role_id, role_name, role_description)
        values (#{roleId}, #{roleName}, #{roleDescription})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update myproject.t_role
        <set>
            <if test="roleName != null and roleName != ''">
                role_name = #{roleName},
            </if>
            <if test="roleDescription != null and roleDescription != ''">
                role_description = #{roleDescription},
            </if>
        </set>
        where role_id = #{roleId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from myproject.t_role where role_id = #{roleId}
    </delete>

</mapper>